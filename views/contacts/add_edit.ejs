<%- include ../partials/header.ejs %>

<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= item._id %>"
                    >
                    <label for="itemTextField">Contact Name</label>
                    <input type="text" class="form-control"
                        id="itemTextField"
                        placeholder="Enter the Contact Name"
                        name="item" 
                        value="<%= item.name %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="QtyTextField">Phone Number</label>
                    <input type="number" class="form-control"
                    id="QtyTextField"
                    placeholder="436743123"
                    name="qty" 
                    value="<%= item.phone %>"
                    required>
                </div>
                <br />
                <div class="form-group">
                    <label for="statusTextField">Email</label>
                    <input type="text" class="form-control"
                    id="statusTextField"
                    placeholder="example@gmail.com"
                    name="status" 
                    value="<%= item.email %>"
                    >
                </div>
                <br />
                           
                <br />
               
                <br/>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> 
                    Submit
                </button>
                
                <a href="/contacts/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

<%- include ../partials/footer.ejs %>